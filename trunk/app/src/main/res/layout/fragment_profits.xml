<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/container"
        android:background="@mipmap/profit_bg"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="85dp"
            android:src="@mipmap/profits_log"
            />

        <ImageView
            android:id="@+id/frag_chest_lid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@mipmap/chest_lids"
            />


        <ImageView
            android:id="@+id/profits_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/profit_light"
            />


        <ImageView
            android:id="@+id/frag_award"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/frag_chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:src="@mipmap/chest"
            />

        <TextView
            android:id="@+id/frag_profits_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="159dp"
            android:text="排行倒计时"
            android:textColor="#885015"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/frag_profits_countdown_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="173dp"
            android:text="12：00：00"
            android:textColor="#885015"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/fratg_sorting_how_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"
            android:src="@mipmap/award_cheats"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            >

            <View
                android:id="@+id/frag_profits_view"
                android:layout_width="0.5dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#cccccc"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/frag_profits_view"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盈利:"
                    android:textColor="#4d4d4d"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/frag_profits_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-23123"
                    android:textColor="#4d4d4d"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/frag_profits_eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/rubber"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/frag_profits_view"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排名:"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/frag_profits_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="100"
                        android:textColor="#4d4d4d"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/frag_profit_before_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="当前奖励"
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/frag_profit_lower_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下级奖励"
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/frag_profit_paroxysm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="终极奖励"
                android:textColor="#999999"
                android:textSize="12sp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <com.jddfun.game.CustomView.DotsProgressBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dots_progress_bar_two"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                app:barDotsRadius="8dp"
                app:barProgressWidth="4dp"
                app:barSpeed="slow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/frag_advance_profits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/advance_no"
                    />

                <ImageView
                    android:id="@+id/frag_advance_profit_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/advance_no"
                    />

                <ImageView
                    android:id="@+id/mFrag_advance_profit_tree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@mipmap/advance_no"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_subordinate"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="小米手机"
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/frag_profits_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/frag_subordinate"
                android:layout_weight="1"
                android:gravity="center"
                android:text="300京东券碎片x1000"
                android:textColor="#999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/frag_profits_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/frag_subordinate"
                android:layout_weight="1"
                android:gravity="center"
                android:text="iPhone7"
                android:textColor="#999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#f5f7ff">

        <RelativeLayout
            android:id="@+id/frag_profits_select"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/frag_prfits_today"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="今日排行"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/frag_profits_subscript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/frag_prfits_today"
                android:src="@mipmap/ash_down"
                tools:ignore="ContentDescription"/>


        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ID"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/frag_profits_gain"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日盈利"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="可获奖励"
            android:textSize="12sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frag_profits_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"/>

</LinearLayout>