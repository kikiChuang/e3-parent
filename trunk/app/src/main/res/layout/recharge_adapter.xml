<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#f5f7ff"
                android:layout_centerVertical="true"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/recharge_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_adapter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.00"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/recharge_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="今日"
                android:textSize="17sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/recharge_adapter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/tacitly_approve"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_adapter_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.00"
                android:textColor="#ff524c"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/recharge_adapter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="类型：商城购买鸡尾酒"
                android:textSize="12sp"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/recharge_adapter_money_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="充值成功"
        android:textSize="17sp"
        />
    <View
        android:id="@+id/recharge_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="#dddfe6"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        ></View>



</RelativeLayout>