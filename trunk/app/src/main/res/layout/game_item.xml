<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0.5dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/divise_color" />


    <com.jddfun.game.View.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        app:corner_radius="5dp" />

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:text="梦想飞镖"
            android:textColor="@color/textColor_4d"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/game_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_title"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="8dp"
            android:text="一期奖励Iphone7"
            android:textColor="@color/color_80"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="0.5px"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@color/divise_color" />


</RelativeLayout>