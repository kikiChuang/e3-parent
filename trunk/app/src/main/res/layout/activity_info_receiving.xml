<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_head"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/receiving_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="姓名"
                android:maxLength="10"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/receiving_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="手机号码"
                android:maxLength="11"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:gravity="top"
                android:layout_marginTop="17dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/receiving_door_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:gravity="top"
                android:layout_marginTop="17dp"
                android:hint="街道门牌信息"
                android:maxLength="40"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/main_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/receiving_ok"
        style="@style/confirmButton"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="15sp" />


</LinearLayout>