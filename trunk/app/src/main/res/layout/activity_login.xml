<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jddfun.game.Act.LoginAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/iv_personal_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="登录"
            android:textColor="@color/textColor_4d"
            android:textSize="@dimen/textSize_18" />

        <TextView
            android:id="@+id/act_login_point_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_personal_icon"
            android:layout_marginTop="30dp"
            android:text="手机号码"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_phone_number"
            style="@style/base_edit"
            android:layout_below="@+id/iv_personal_icon"
            android:layout_marginTop="50dp"
            android:hint="手机号码"
            android:imeOptions="actionNext"
            android:maxLength="11"
            android:nextFocusForward="@+id/userPassword"
            android:textSize="@dimen/textSize_18" />

        <TextView
            style="@style/infoline"
            android:layout_below="@+id/et_phone_number" />

        <TextView
            android:id="@+id/act_login_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone_number"
            android:layout_marginTop="10dp"
            android:text="密码"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/base_edit"
            android:layout_below="@+id/et_phone_number"
            android:layout_marginTop="30dp"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true" />


        <TextView
            style="@style/infoline"
            android:layout_below="@+id/et_pwd" />

        <TextView
            android:id="@+id/forgerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_pwd"
            android:layout_marginTop="20dp"
            android:text="忘记密码"
            android:textColor="#ff463e"
            android:textSize="@dimen/textSize_12" />


        <Button
            android:id="@+id/login"
            style="@style/confirmButton"
            android:layout_below="@+id/forgerPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16" />


    </RelativeLayout>
</RelativeLayout>
