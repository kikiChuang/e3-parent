<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#e9ecf3">

        <TextView
            android:id="@+id/leaf_time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="当天"
            android:textColor="#808080"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/frag_record_calendar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/fund_calendar"
            />
    </RelativeLayout>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frag_leaf_record_trl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/frag_leaf_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f7ff"
            android:dividerHeight="10dp"/>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    <include
        layout="@layout/empty_layout"
        ></include>


</LinearLayout>