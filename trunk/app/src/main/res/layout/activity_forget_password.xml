<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:text="重置密码"
            android:textColor="@color/textColor_4d"
            android:textSize="@dimen/textSize_18" />


        <TextView
            android:id="@+id/forget_phone_point_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="手机号码"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/base_edit"
            android:layout_marginTop="5dp"
            android:hint="手机号码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:nextFocusForward="@+id/et_verificationCode"
            android:numeric="integer" />


        <View
            style="@style/main_line"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/forget__verificationCode_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="验证码"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_verificationCode"
                style="@style/base_edit"
                android:layout_centerVertical="true"
                android:hint="验证码"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="6"
                android:nextFocusForward="@+id/et_new_pwd"
                android:numeric="integer" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发送验证码" />
        </RelativeLayout>

        <View
            style="@style/main_line"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/forget__setNewPwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="设置新密码(6-15个字符)"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_new_pwd"
            style="@style/base_edit"
            android:layout_marginTop="5dp"
            android:hint="设置新密码(6-15个字符)"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="15"
            android:nextFocusForward="@+id/et_confirm_pwd"
            android:numeric="integer" />

        <View
            style="@style/main_line"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/forget__confirmNewPwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="重新确认密码"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            style="@style/base_edit"
            android:layout_marginTop="5dp"
            android:hint="重新确认密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="15"
            android:numeric="integer" />

        <View
            style="@style/main_line"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/confirmButton"
            android:layout_marginTop="35dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text="@string/attention"
            android:textColor="#bcbdc5"
            android:textSize="@dimen/textSize_12" />
    </LinearLayout>

</ScrollView>

