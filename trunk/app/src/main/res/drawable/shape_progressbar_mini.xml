<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/textColor_secondary"
                    android:startColor="@color/textColor_secondary"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/dalog"
                    android:startColor="@color/dalog"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/dalog"
                    android:startColor="@color/dalog"/>
            </shape>
        </clip>
    </item>
</layer-list>